@page
@model ClientAPI.API.Pages.Clients.IndexModel

<h1>Clients</h1>
<a asp-page="/Clients/Create">New Client</a>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Size</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var client in Model.Clients)
    {
        <tr>
            <td>@client.Name</td>
            <td>@client.Size</td>
            <td>
                <a asp-page="/Clients/Edit" asp-route-id="@client.Id">Edit</a> |
                <a asp-page="/Clients/Delete" asp-route-id="@client.Id">Remove</a>
            </td>
        </tr>
    }
    </tbody>
</table>